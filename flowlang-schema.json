{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://flowlang.dev/schema/flow.json",
  "title": "FlowLang Flow Definition",
  "description": "Schema for FlowLang workflow definitions",
  "type": "object",
  "required": ["flow", "steps"],
  "properties": {
    "flow": {
      "type": "string",
      "description": "Name of the flow (PascalCase recommended)",
      "pattern": "^[A-Za-z][A-Za-z0-9_]*$",
      "examples": ["HelloWorld", "UserAuthentication", "DataProcessor"]
    },
    "description": {
      "type": "string",
      "description": "Human-readable description of what this flow does"
    },
    "connections": {
      "type": "object",
      "description": "Database and service connections used by this flow",
      "patternProperties": {
        "^[a-z][a-z0-9_]*$": {
          "$ref": "#/definitions/connection"
        }
      }
    },
    "triggers": {
      "type": "array",
      "description": "Event-driven triggers that can execute this flow",
      "items": {
        "$ref": "#/definitions/trigger"
      }
    },
    "inputs": {
      "type": "array",
      "description": "Input parameters required by this flow",
      "items": {
        "$ref": "#/definitions/input"
      }
    },
    "steps": {
      "type": "array",
      "description": "Execution steps that make up this flow",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/step"
      }
    },
    "outputs": {
      "type": "array",
      "description": "Output values returned by this flow",
      "items": {
        "$ref": "#/definitions/output"
      }
    },
    "on_cancel": {
      "type": "array",
      "description": "Cleanup steps to execute if flow is cancelled",
      "items": {
        "$ref": "#/definitions/step"
      }
    }
  },
  "definitions": {
    "input": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Input parameter name (snake_case recommended)",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "type": {
          "type": "string",
          "enum": ["string", "int", "integer", "number", "float", "boolean", "bool", "object", "array", "list"],
          "description": "Data type of the input parameter"
        },
        "required": {
          "type": "boolean",
          "description": "Whether this input is required",
          "default": false
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of this input"
        },
        "default": {
          "description": "Default value if input is not provided"
        }
      }
    },
    "output": {
      "type": "object",
      "required": ["name", "value"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Output value name",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "value": {
          "type": "string",
          "description": "Variable reference to output value (e.g., ${step_id.result})",
          "pattern": "^\\$\\{.+\\}$"
        },
        "description": {
          "type": "string",
          "description": "Human-readable description of this output"
        }
      }
    },
    "step": {
      "type": "object",
      "oneOf": [
        { "$ref": "#/definitions/taskStep" },
        { "$ref": "#/definitions/parallelStep" },
        { "$ref": "#/definitions/conditionalStep" },
        { "$ref": "#/definitions/switchStep" },
        { "$ref": "#/definitions/loopStep" },
        { "$ref": "#/definitions/subflowStep" },
        { "$ref": "#/definitions/exitStep" }
      ]
    },
    "taskStep": {
      "type": "object",
      "required": ["task", "id"],
      "properties": {
        "task": {
          "type": "string",
          "description": "Name of the task to execute (PascalCase recommended)",
          "pattern": "^[A-Z][A-Za-z0-9]*$"
        },
        "id": {
          "type": "string",
          "description": "Unique identifier for this step (snake_case recommended)",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "connection": {
          "type": "string",
          "description": "Connection name to use for this task (references connections defined at flow level)",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "if": {
          "type": "string",
          "description": "Conditional expression - step only executes if true"
        },
        "inputs": {
          "type": "object",
          "description": "Input parameters to pass to the task",
          "patternProperties": {
            "^[a-z][a-z0-9_]*$": {
              "oneOf": [
                { "type": "string" },
                { "type": "number" },
                { "type": "boolean" },
                { "type": "object" },
                { "type": "array" },
                { "type": "null" }
              ]
            }
          }
        },
        "outputs": {
          "type": "array",
          "description": "Output keys returned by this task",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          }
        },
        "depends_on": {
          "type": "array",
          "description": "Step IDs that must complete before this step runs",
          "items": {
            "type": "string"
          }
        },
        "retry": {
          "$ref": "#/definitions/retryConfig"
        },
        "timeout": {
          "type": "integer",
          "description": "Maximum execution time in seconds",
          "minimum": 1
        },
        "on_error": {
          "type": "array",
          "description": "Steps to execute if this step fails",
          "items": {
            "$ref": "#/definitions/step"
          }
        }
      }
    },
    "parallelStep": {
      "type": "object",
      "required": ["parallel"],
      "properties": {
        "parallel": {
          "type": "array",
          "description": "Steps to execute concurrently",
          "minItems": 2,
          "items": {
            "$ref": "#/definitions/step"
          }
        },
        "id": {
          "type": "string",
          "description": "Optional identifier for this parallel block",
          "pattern": "^[a-z][a-z0-9_]*$"
        }
      }
    },
    "conditionalStep": {
      "type": "object",
      "required": ["if", "then"],
      "properties": {
        "if": {
          "oneOf": [
            {
              "type": "string",
              "description": "Simple condition to evaluate"
            },
            {
              "type": "object",
              "description": "Quantified condition (all/any/none)",
              "properties": {
                "all": {
                  "type": "array",
                  "description": "All conditions must be true",
                  "items": { "type": "string" }
                },
                "any": {
                  "type": "array",
                  "description": "At least one condition must be true",
                  "items": { "type": "string" }
                },
                "none": {
                  "type": "array",
                  "description": "No conditions must be true (all must be false)",
                  "items": { "type": "string" }
                }
              },
              "oneOf": [
                { "required": ["all"] },
                { "required": ["any"] },
                { "required": ["none"] }
              ]
            }
          ]
        },
        "then": {
          "type": "array",
          "description": "Steps to execute if condition is true",
          "items": {
            "$ref": "#/definitions/step"
          }
        },
        "else": {
          "type": "array",
          "description": "Steps to execute if condition is false",
          "items": {
            "$ref": "#/definitions/step"
          }
        },
        "id": {
          "type": "string",
          "description": "Optional identifier for this conditional block",
          "pattern": "^[a-z][a-z0-9_]*$"
        }
      }
    },
    "loopStep": {
      "type": "object",
      "required": ["for_each", "as", "do"],
      "properties": {
        "for_each": {
          "type": "string",
          "description": "Variable reference to array to iterate over (e.g., ${inputs.items})"
        },
        "as": {
          "type": "string",
          "description": "Variable name for current item in loop",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "do": {
          "type": "array",
          "description": "Steps to execute for each item",
          "items": {
            "$ref": "#/definitions/step"
          }
        },
        "id": {
          "type": "string",
          "description": "Optional identifier for this loop",
          "pattern": "^[a-z][a-z0-9_]*$"
        }
      }
    },
    "switchStep": {
      "type": "object",
      "required": ["switch", "cases"],
      "properties": {
        "switch": {
          "type": "string",
          "description": "Expression to evaluate and match against cases"
        },
        "cases": {
          "type": "array",
          "description": "Cases to match against switch expression",
          "items": {
            "type": "object",
            "properties": {
              "when": {
                "oneOf": [
                  { "type": "string" },
                  { "type": "number" },
                  { "type": "boolean" },
                  {
                    "type": "array",
                    "items": {
                      "oneOf": [
                        { "type": "string" },
                        { "type": "number" },
                        { "type": "boolean" }
                      ]
                    }
                  }
                ],
                "description": "Value(s) to match - can be single value or array of values"
              },
              "do": {
                "type": "array",
                "description": "Steps to execute when this case matches",
                "items": {
                  "$ref": "#/definitions/step"
                }
              }
            }
          }
        },
        "default": {
          "type": "array",
          "description": "Steps to execute if no cases match",
          "items": {
            "$ref": "#/definitions/step"
          }
        },
        "id": {
          "type": "string",
          "description": "Optional identifier for this switch block",
          "pattern": "^[a-z][a-z0-9_]*$"
        }
      }
    },
    "subflowStep": {
      "type": "object",
      "required": ["subflow", "id"],
      "properties": {
        "subflow": {
          "type": "string",
          "description": "Name of the subflow to execute (references another flow)",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "id": {
          "type": "string",
          "description": "Unique identifier for this subflow step",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "inputs": {
          "type": "object",
          "description": "Input parameters to pass to the subflow",
          "patternProperties": {
            "^[a-z][a-z0-9_]*$": {
              "oneOf": [
                { "type": "string" },
                { "type": "number" },
                { "type": "boolean" },
                { "type": "object" },
                { "type": "array" },
                { "type": "null" }
              ]
            }
          }
        },
        "outputs": {
          "type": "array",
          "description": "Output keys to capture from the subflow",
          "items": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9_]*$"
          }
        },
        "on_error": {
          "type": "array",
          "description": "Steps to execute if the subflow fails",
          "items": {
            "$ref": "#/definitions/step"
          }
        }
      }
    },
    "exitStep": {
      "type": "object",
      "required": ["exit"],
      "properties": {
        "exit": {
          "description": "Exit flow execution immediately",
          "oneOf": [
            {
              "type": "null",
              "description": "Simple exit with no reason or outputs"
            },
            {
              "type": "object",
              "properties": {
                "reason": {
                  "type": "string",
                  "description": "Reason for flow termination"
                },
                "outputs": {
                  "type": "object",
                  "description": "Output values to return upon termination",
                  "patternProperties": {
                    "^[a-z][a-z0-9_]*$": {
                      "oneOf": [
                        { "type": "string" },
                        { "type": "number" },
                        { "type": "boolean" },
                        { "type": "object" },
                        { "type": "array" },
                        { "type": "null" }
                      ]
                    }
                  }
                }
              }
            }
          ]
        }
      }
    },
    "retryConfig": {
      "type": "object",
      "properties": {
        "max_attempts": {
          "type": "integer",
          "description": "Maximum number of retry attempts",
          "minimum": 1,
          "default": 3
        },
        "delay_seconds": {
          "type": "number",
          "description": "Delay between retry attempts in seconds",
          "minimum": 0,
          "default": 1
        },
        "backoff": {
          "type": "string",
          "enum": ["fixed", "exponential", "linear"],
          "description": "Retry backoff strategy",
          "default": "fixed"
        }
      }
    },
    "connection": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["postgres", "postgresql", "mysql", "sqlite", "mongodb", "redis", "airtable"],
          "description": "Type of connection"
        },
        "host": {
          "type": "string",
          "description": "Database host (for postgres, mysql, mongodb, redis)"
        },
        "port": {
          "type": "integer",
          "description": "Database port"
        },
        "database": {
          "type": "string",
          "description": "Database name (or file path for sqlite)"
        },
        "username": {
          "type": "string",
          "description": "Database username"
        },
        "password": {
          "type": "string",
          "description": "Database password (can use ${ENV_VAR} for secrets)"
        },
        "url": {
          "type": "string",
          "description": "Full connection URL (alternative to individual parameters)"
        },
        "timeout": {
          "type": "number",
          "description": "Connection timeout in seconds",
          "minimum": 0
        },
        "pool_size": {
          "type": "integer",
          "description": "Connection pool size",
          "minimum": 1
        }
      }
    },
    "trigger": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["webhook", "schedule"],
          "description": "Type of trigger"
        },
        "id": {
          "type": "string",
          "description": "Optional identifier for this trigger",
          "pattern": "^[a-z][a-z0-9_]*$"
        }
      },
      "oneOf": [
        { "$ref": "#/definitions/webhookTrigger" },
        { "$ref": "#/definitions/scheduleTrigger" }
      ]
    },
    "webhookTrigger": {
      "type": "object",
      "required": ["type", "path", "method"],
      "properties": {
        "type": {
          "type": "string",
          "const": "webhook"
        },
        "path": {
          "type": "string",
          "description": "HTTP path for the webhook (e.g., /webhooks/my-flow)",
          "pattern": "^/"
        },
        "method": {
          "type": "string",
          "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"],
          "description": "HTTP method for the webhook"
        },
        "auth": {
          "type": "object",
          "description": "Authentication configuration",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["api_key", "bearer"],
              "description": "Authentication type"
            },
            "header": {
              "type": "string",
              "description": "Header name for authentication (e.g., X-API-Key)"
            },
            "key": {
              "type": "string",
              "description": "Expected key/token value (can use ${ENV_VAR})"
            }
          }
        },
        "async": {
          "type": "boolean",
          "description": "Whether to execute flow asynchronously (returns immediately)",
          "default": false
        },
        "input_mapping": {
          "type": "string",
          "enum": ["body", "query", "headers", "path", "all"],
          "description": "How to map HTTP request to flow inputs",
          "default": "body"
        }
      }
    },
    "scheduleTrigger": {
      "type": "object",
      "required": ["type", "cron"],
      "properties": {
        "type": {
          "type": "string",
          "const": "schedule"
        },
        "cron": {
          "type": "string",
          "description": "Cron expression for schedule (e.g., '0 0 * * *' for daily at midnight)"
        },
        "timezone": {
          "type": "string",
          "description": "Timezone for cron schedule (e.g., 'UTC', 'America/New_York')",
          "default": "UTC"
        }
      }
    }
  }
}
